
@{
    ViewBag.Title = "Consulta";
    Layout = "~/Views/Shared/_LayoutSebrae.cshtml";
}


<div class="row">
    <div class="col-lg-5 col-md-6 col-sm-6">
        <div class="card card-stats">
            <div class="card-body ">
                <div class="row">
                    <div class="col-12 col-md-12">
                        <div class="numbers">
                            <p class="card-category">Cidade</p>
                            <p>
                                <select class="form-control" placeholder="Selecione uma opção">
                                    <option disabled="">- - -   Selecione uma opção   - - -</option>
                                    <option>Curitiba</option>
                                </select>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer ">
            </div>
        </div>
    </div>
    <div class="col-lg-5 col-md-6 col-sm-6">
        <div class="card card-stats">
            <div class="card-body ">
                <div class="row">
                    <div class="col-12 col-md-12">
                        <div class="numbers">
                            <p class="card-category">Segmento</p>
                            <p>
                                <select class="form-control" placeholder="Selecione uma opção">
                                    <option disabled="">- - -   Selecione uma opção   - - -</option>
                                    <option>Tecnologia</option>
                                </select>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer ">
            </div>
        </div>
    </div>
    <div class="col-lg-2 col-md-6 col-sm-6">
        <div class="card card-stats">
            <div class="card-body text-center">
                <div class="row">
                    <div class="col-12 col-md-12">
                        <button type="submit" class="btn btn-primary btn-round">Ok</button>
                    </div>
                </div>
            </div>
            <div class="card-footer ">
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="card ">
            <div class="card-header ">
                <h5 class="card-title">Cidade</h5>
            </div>
            <div class="card-body ">
                <canvas id="chartEmail"></canvas>
            </div>
            <div class="card-footer ">
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card card-chart">
            <div class="card-header">
                <h5 class="card-title">Segmento</h5>
            </div>
            <div class="card-body">
                <canvas id="speedChart" width="400" height="100"></canvas>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
</div>
